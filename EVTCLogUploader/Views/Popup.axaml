<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:p="clr-namespace:EVTCLogUploader.Resources.Lang"
		x:Name="PopupWindow"
        mc:Ignorable="d"
		SizeToContent="WidthAndHeight"
		WindowStartupLocation="CenterOwner"
        x:Class="EVTCLogUploader.Views.Popup"
		Icon="/Assets/Logo.png"
		ExtendClientAreaToDecorationsHint="True"
		SystemDecorations="1"
		Title="EVTC Log Uploader - Message"
		CanResize="False">
	<Grid Margin="20,20,20,20" 
		  HorizontalAlignment="Center" 
		  VerticalAlignment="Center">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"></RowDefinition>
			<RowDefinition Height="auto"></RowDefinition>
			<RowDefinition Height="auto"></RowDefinition>
		</Grid.RowDefinitions>
		
		<TextBlock Grid.Row="0"
				   Margin="10"
				   VerticalAlignment="Center"
				   Text="{Binding Title}"></TextBlock>
		<TextBlock Grid.Row="1"
				   Margin="10"
				   VerticalAlignment="Center"
				   Text="{Binding Body}"></TextBlock>
		<Button Grid.Row="2" 
				HorizontalAlignment="Center"
				Command="{Binding CloseCommand}"
				CommandParameter="{Binding ElementName=PopupWindow}"
				Content="{x:Static p:Resources.LNG_Close}"/>
	</Grid>
</Window>
